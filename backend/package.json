{
  "name": "r2-api",
  "version": "1.0.0",
  "description": "API Node.js TypeScript con Cloudflare R2",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch ./src/index.ts",
    "build": "tsc",
    "start": "bun run ./dist/index.js",
    "type-check": "tsc --noEmit",
    "format": "bunx biome format --write",
    "lintB": "bunx biome lint --write"
  },
  "keywords": [
    "cloudflare",
    "r2",
    "typescript",
    "nodejs"
  ],
  "author": "llOrTeGall",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.500.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.17.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "@biomejs/biome": "2.3.12",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.10",
    "morgan": "^1.10.1",
    "typescript": "^5.3.3"
  }
}
